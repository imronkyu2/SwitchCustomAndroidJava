<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="250dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSwichProductCode"
        style="@style/LayoutStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp">

        <Switch
            android:id="@+id/cSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track"/>

        <TextView
            android:id="@+id/cSwitch_Kiri"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="Kiri"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/cSwitch"
            app:layout_constraintLeft_toLeftOf="@+id/cSwitch"
            app:layout_constraintTop_toTopOf="@id/cSwitch" />

        <TextView
            android:id="@+id/cSwitch_Kanan"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="Kanan"
            android:textColor="@color/black404040"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/cSwitch"
            app:layout_constraintLeft_toLeftOf="@+id/cSwitch"
            app:layout_constraintStart_toEndOf="@+id/cSwitch_Kiri"
            app:layout_constraintTop_toTopOf="@id/cSwitch" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>